= form_for [@user, @event, @event_page] do |f|
  = f.error_messages
  %p
    = f.label :title
    %br
    = f.text_field :title
  %p
    = f.label :content
    %br
    = f.text_area :content
  %p
    = f.label :event_id
    %br
    = f.number_field :event_id
  %p
    = f.label :published, "Show"
    %br
    = f.check_box :published
  %p
    = f.label :slug
    %br
    = f.text_field :slug
  %p
    = f.label :item_order
    %br
    = f.number_field :item_order
  %li
    %button.button.save{:type => 'submit'}
      Save
