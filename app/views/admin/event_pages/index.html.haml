- title "Event Pages"

%section.item_list
  = link_to "New Page", new_admin_event_event_page_path, :class=>'button add'
  %h3 Pages
  %ul
    - for event_page in @event_pages
      %li[event_page]{:class=> event_page.published ? '':'disabled'}
        = link_to 'Edit', edit_admin_event_event_page_path(@event, event_page), :class=>'button manage'
        = event_page.title
        %span.url
          = "/#{event_page.slug}"
        = link_to 'Delete', admin_event_event_page_path(@event, event_page), :confirm => 'Are you sure?', :method => :delete, :class=>'button delete'
        
%section.item_list
  = link_to "New Link", new_admin_event_link_path, :class=>'button add'
  %h3 Links
  %ul
    - for link in @links
      %li[link]{:class=> link.published ? '':'disabled'}
        = link_to 'Edit', edit_admin_event_link_path(@event, link), :class=>'button manage'
        = link.title
        %span.url
          = "#{link.url}"
        = link_to 'Delete', admin_event_link_path(@event, link), :confirm => 'Are you sure?', :method => :delete, :class=>'button delete'