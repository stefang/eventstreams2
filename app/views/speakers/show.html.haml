- title "#{@speaker.name} | #{@event.title}" 

- if on_subdomain?

  %article.speaker
    = image_tag @speaker.portrait.url(:thumb), :alt => @speaker.name, :title => @speaker.name
    %h4= @speaker.name
    = @speaker.biog
    %ul.talks
      - for talk in @speaker.talks
        %li= link_to talk.title, talk